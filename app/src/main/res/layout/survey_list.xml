<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/survey_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.app.ecosurvey.utils.FontStyle.PlayTextViewBold
                    android:id="@+id/survey_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Parlimen Kategori" />

            </LinearLayout>

            <com.app.ecosurvey.utils.FontStyle.PlayTextView
                android:id="@+id/survey_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:text="Issue" />

            <com.app.ecosurvey.utils.FontStyle.PlayTextView
                android:id="@+id/survey_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="15dp"
                android:text="Created" />

            <com.app.ecosurvey.utils.FontStyle.PlayTextView
                android:id="@+id/survey_updated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Updated"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.app.ecosurvey.utils.FontStyle.PlayTextView
                    android:id="@+id/survey_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:paddingBottom="5dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/grey_background"
                    android:textSize="12sp" />

                <com.app.ecosurvey.utils.FontStyle.PlayTextView
                    android:id="@+id/survey_status_api"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:paddingBottom="5dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/grey_background"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_delete" />


    </RelativeLayout>

</LinearLayout>